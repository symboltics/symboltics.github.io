<html lang="{{ .lang }}">
<head>
    <title>{{ .title }}</title>
    <link rel="icon" type="image/png" href="https://avatars.githubusercontent.com/u/166796215"/>
    <link rel="stylesheet" href="/assets/base.css"/>
    <style>
        .blank {
            background-image: url("/assets/img/title.svg");
            background-repeat: no-repeat;

            background-position: center;
        }
    </style>
</head>
<body>
<header class="nav-bar">
    {{ with .nav }}
        <div class="nav-logo" style="float: left">
            <img src="{{ .logo.src }}" alt="logo" width="{{ .logo.width }}" height="{{ .logo.height }}"/>
        </div>
        <nav style="float: right">
            {{ range .items }}
                <a class="nav-item-link" href="{{ .link }}">{{ .name }}</a>
            {{ end }}
        </nav>
    {{ end }}
</header>

